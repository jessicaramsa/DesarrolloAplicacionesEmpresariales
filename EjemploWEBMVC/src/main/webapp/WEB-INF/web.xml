<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SeleccionSemestre.do</servlet-name>
        <servlet-class>controlador.SeleccionSemestre</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FechaHora</servlet-name>
        <servlet-class>controlador.FechaHora</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Tutorias</servlet-name>
        <servlet-class>controlador.Tutorias</servlet-class>
        <init-param>
            <param-name>RutaCarpeta</param-name>
            <param-value>c:/Temp/dap</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>controlador.IniciarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeleccionSemestre.do</servlet-name>
        <url-pattern>/SeleccionSemestre</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FechaHora</servlet-name>
        <url-pattern>/FechaHora</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Tutorias</servlet-name>
        <url-pattern>/Tutorias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
